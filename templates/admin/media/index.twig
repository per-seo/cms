{% extends "admin/layout.twig" %}

{% block title %}Media Library{% endblock %}

{% block styles %}
<style>
    .media-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
        padding: 15px;
    }
    .media-item {
        border: 1px solid #dee2e6;
        border-radius: 4px;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.2s;
    }
    .media-item:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    .media-item img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .media-item-info {
        padding: 10px;
        background: #f8f9fa;
    }
    .media-item-info h6 {
        margin: 0;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    .media-item-info small {
        font-size: 0.75rem;
        color: #6c757d;
    }
</style>
{% endblock %}

{% block content %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Media Library</h1>
            </div>
            <div class="col-sm-6">
                <div class="float-sm-right">
                    <label for="fileUpload" class="btn btn-primary mb-0">
                        <i class="fas fa-upload"></i> Upload Media
                        <input type="file" id="fileUpload" style="display: none;" @change="uploadFile" accept="image/*">
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="content" id="mediaApp">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div v-if="loading" class="text-center py-5">
                    <i class="fas fa-spinner fa-spin fa-3x"></i>
                    <p class="mt-3">Loading media...</p>
                </div>
                
                <div v-else-if="media.length === 0" class="text-center py-5">
                    <i class="fas fa-images fa-3x text-muted"></i>
                    <p class="mt-3">No media files found. Upload your first file!</p>
                </div>

                <div v-else class="media-grid">
                    <div v-for="item in media" :key="item.id" class="media-item" @click="selectMedia(item)">
                        <img v-if="item.mime_type.startsWith('image/')" :src="item.path" :alt="item.original_name">
                        <div v-else class="d-flex align-items-center justify-content-center" style="height: 200px; background: #f8f9fa;">
                            <i class="fas fa-file fa-4x text-muted"></i>
                        </div>
                        <div class="media-item-info">
                            <h6 :title="item.original_name">${item.original_name}</h6>
                            <small>${formatFileSize(item.size)}</small>
                            <button @click.stop="deleteMedia(item.id)" class="btn btn-sm btn-danger float-right">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer clearfix" v-if="pagination.totalPages > 1">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item" :class="{disabled: pagination.page === 1}">
                        <a class="page-link" href="#" @click.prevent="changePage(pagination.page - 1)">«</a>
                    </li>
                    <li 
                        class="page-item" 
                        v-for="p in pagination.totalPages" 
                        :key="p"
                        :class="{active: p === pagination.page}"
                    >
                        <a class="page-link" href="#" @click.prevent="changePage(p)">${p}</a>
                    </li>
                    <li class="page-item" :class="{disabled: pagination.page === pagination.totalPages}">
                        <a class="page-link" href="#" @click.prevent="changePage(pagination.page + 1)">»</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
<script>
const { createApp } = Vue;

createApp({
    delimiters: ['${', '}'],
    data() {
        return {
            media: {{ media|json_encode|raw }},
            pagination: {{ pagination|json_encode|raw }},
            loading: false,
            uploading: false
        }
    },
    methods: {
        async loadMedia() {
            this.loading = true;
            try {
                const response = await axios.get(basepath + '/admin/api/media?page=' + this.pagination.page);
                this.media = response.data.data;
                this.pagination = {
                    page: response.data.page,
                    perPage: response.data.perPage,
                    total: response.data.total,
                    totalPages: response.data.totalPages
                };
            } catch (error) {
                alert('Error loading media');
            } finally {
                this.loading = false;
            }
        },
        
        async uploadFile(event) {
            const file = event.target.files[0];
            if (!file) return;
            
            this.uploading = true;
            const formData = new FormData();
            formData.append('file', file);
            
            try {
                const response = await axios.post(basepath + '/admin/media/upload', formData, {
                    headers: {
                        'Content-Type': 'multipart/form-data'
                    }
                });
                
                if (response.data.success) {
                    this.loadMedia();
                    event.target.value = '';
                }
            } catch (error) {
                alert('Error uploading file: ' + (error.response?.data?.message || error.message));
            } finally {
                this.uploading = false;
            }
        },
        
        changePage(page) {
            if (page >= 1 && page <= this.pagination.totalPages) {
                this.pagination.page = page;
                this.loadMedia();
            }
        },
        
        async deleteMedia(id) {
            if (!confirm('Are you sure you want to delete this file?')) return;
            
            try {
                await axios.delete(basepath + '/admin/media/' + id);
                this.loadMedia();
            } catch (error) {
                alert('Error deleting file');
            }
        },
        
        selectMedia(item) {
            console.log('Selected media:', item);
            // TODO: Implement media selection callback
        },
        
        formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }
    }
}).mount('#mediaApp');
</script>
{% endblock %}
