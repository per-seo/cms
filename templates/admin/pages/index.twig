{% extends "admin/layout.twig" %}

{% block title %}Pages{% endblock %}

{% block content %}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Pages</h1>
            </div>
            <div class="col-sm-6">
                <div class="float-sm-right">
                    <a href="{{ adminFullPath }}/pages/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i> New Page
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="content" id="pagesApp">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <input 
                            type="text" 
                            class="form-control" 
                            placeholder="Search pages..."
                            v-model="search"
                            @input="loadPages"
                        >
                    </div>
                    <div class="col-md-3">
                        <select class="form-control" v-model="statusFilter" @change="loadPages">
                            <option value="">All Status</option>
                            <option value="published">Published</option>
                            <option value="draft">Draft</option>
                            <option value="scheduled">Scheduled</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Template</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th width="150">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-if="loading">
                            <td colspan="6" class="text-center">
                                <i class="fas fa-spinner fa-spin"></i> Loading...
                            </td>
                        </tr>
                        <tr v-else-if="pages.length === 0">
                            <td colspan="6" class="text-center">No pages found</td>
                        </tr>
                        <tr v-else v-for="page in pages" :key="page.id">
                            <td>
                                <strong>${page.title}</strong>
                                <br>
                                <small class="text-muted">${page.excerpt ? page.excerpt.substring(0, 100) + '...' : ''}</small>
                            </td>
                            <td>${page.author_name}</td>
                            <td>${page.template}</td>
                            <td>
                                <span :class="'badge badge-' + getStatusColor(page.status)">
                                    ${page.status}
                                </span>
                            </td>
                            <td>${formatDate(page.created_at)}</td>
                            <td>
                                <a :href="'{{ adminFullPath }}/pages/edit/' + page.id" class="btn btn-sm btn-info">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button @click="deletePage(page.id)" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer clearfix" v-if="pagination.totalPages > 1">
                <ul class="pagination pagination-sm m-0 float-right">
                    <li class="page-item" :class="{disabled: pagination.page === 1}">
                        <a class="page-link" href="#" @click.prevent="changePage(pagination.page - 1)">«</a>
                    </li>
                    <li 
                        class="page-item" 
                        v-for="p in pagination.totalPages" 
                        :key="p"
                        :class="{active: p === pagination.page}"
                    >
                        <a class="page-link" href="#" @click.prevent="changePage(p)">${p}</a>
                    </li>
                    <li class="page-item" :class="{disabled: pagination.page === pagination.totalPages}">
                        <a class="page-link" href="#" @click.prevent="changePage(pagination.page + 1)">»</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block scripts %}
<script>
const { createApp } = Vue;

createApp({
    delimiters: ['${', '}'],
    data() {
        return {
            pages: {{ pages|json_encode|raw }},
            pagination: {{ pagination|json_encode|raw }},
            search: '',
            statusFilter: '',
            loading: false
        }
    },
    methods: {
        async loadPages() {
            this.loading = true;
            try {
                const params = new URLSearchParams({
                    page: this.pagination.page,
                    per_page: this.pagination.perPage
                });
                
                if (this.search) params.append('search', this.search);
                if (this.statusFilter) params.append('status', this.statusFilter);
                
                const response = await axios.get(basepath + '/admin/api/pages?' + params);
                this.pages = response.data.data;
                this.pagination = {
                    page: response.data.page,
                    perPage: response.data.perPage,
                    total: response.data.total,
                    totalPages: response.data.totalPages
                };
            } catch (error) {
                alert('Error loading pages');
            } finally {
                this.loading = false;
            }
        },
        
        changePage(page) {
            if (page >= 1 && page <= this.pagination.totalPages) {
                this.pagination.page = page;
                this.loadPages();
            }
        },
        
        async deletePage(id) {
            if (!confirm('Are you sure you want to delete this page?')) return;
            
            try {
                await axios.delete('{{ adminFullPath }}/pages/delete/' + id);
                this.loadPages();
            } catch (error) {
                alert('Error deleting page');
            }
        },
        
        getStatusColor(status) {
            const colors = {
                published: 'success',
                draft: 'warning',
                scheduled: 'info'
            };
            return colors[status] || 'secondary';
        },
        
        formatDate(date) {
            return new Date(date).toLocaleDateString();
        }
    }
}).mount('#pagesApp');
</script>
{% endblock %}
